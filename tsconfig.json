{
    "include": ["./src/**/*"],
    "exclude": [
      "./node_modules",
      "./dist",
      "eslint.config.mjs",
      "jest.config.js"
    ],
    "compilerOptions": {
      "target": "ES2015",
      "module": "commonjs",
      "lib": ["ES6"],
      "allowJs": true,
      "noImplicitAny": true,
      "outDir": "dist",
      "rootDir": "src",
      "strict": false,
      "esModuleInterop": false
    }
  }
  